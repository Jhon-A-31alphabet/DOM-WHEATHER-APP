    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <link rel="stylesheet" href="/css/main.css">
    
    
    <script>

        async function fetchweather(city ="dominican republic santiago") {
  try {
    const response = await axios.get("http://api.weatherapi.com/v1/current.json", {
      params: {
        key: "56eabba0c52d4590a92232747240612",
        q: city,
        aqi: "yes"
      }
    });



    console.log(response.data);
    document.getElementById('weather_info').innerHTML = `
                    <p><strong>City:</strong> ${response.data.location.name}</p>
                    <p ><strong>Temperature:</strong> ${response.data.current.temp_c} Â°C</p>
                    <p><strong>Condition:</strong> ${response.data.current.condition.text}</p>
                    <p><strong>Wind speed kph:   </strong>${response.data.current.wind_kph}<p>

                    <img src="${response.data.current.condition.icon}" alt="weather icon">`


    
  } catch (error) {
    console.error("the error is :", error);
  }
}

window.fetchweather = fetchweather;
fetchweather()

</script>





